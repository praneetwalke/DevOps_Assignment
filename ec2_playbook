---
- name: Launch an EC2 instance with a Linux AMI
  hosts: localhost
  gather_facts: false
  tasks:
    - name: Launch EC2 instance in the VPC
      community.aws.ec2_instance:
        key_name: MyKeyPair                
        instance_type: t2.micro
        image_id: ami-0c55b159cbfafe1f0    # E Ubuntu AMI
        region: us-east-1
        wait: yes
        count: 1
        instance_tags:
          Name: WebServerInstance
        vpc_subnet_id: subnet-0326274eb5850abe1
      register: ec2

    - name: Wait for SSH to become available
      wait_for:
        host: "{{ ec2.instances[0].public_ip }}"
        port: 22
        delay: 60
        timeout: 300
        state: started

    - name: Add the EC2 instance to the webserver group
      add_host:
        name: "{{ ec2.instances[0].public_ip }}"
        groups: webserver

    - name: Output the public IP of the instance
      debug:
        msg: "EC2 instance is available at {{ ec2.instances[0].public_ip }}"
